.row
  .col-md-12
    %h1
      .small
        Categories:
.row
  .col-md-12
    %ul.list-group
      - categories.each do |category|
        = link_to category_path(category) do
          %li.list-group-item 
            = category.name
            = content_tag( :i, '', class: "fa #{category.icon_class}" )
- if current_user.try(:admin?)
  .row
    .col-md-6.col-md-offset-3
      %button.btn.btn-default.btn-block{type: "button"}
        = link_to "New", new_category_path
