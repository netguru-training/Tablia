.row
  .col-md-12.well
    .row
      .col-md-12
        .title
          .small
            = link_to advertise.title, advertise_path(advertise)
            %br
              %strong
                Category:
              = advertise.category_name
            %strong
              Created at:
            = advertise.friendly_date
    .row
      .col-md-12
        .row
          .col-md-2
            = image_tag advertise.photo.url(:medium), class: 'img-thumbnail'
          .col-md-10.well
            = advertise.body
